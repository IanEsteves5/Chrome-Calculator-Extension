        "48": "resources/image/icon_beta_48.png",
        "128": "resources/image/icon_beta_128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "resources/image/icon_beta_19.png",
            "38": "resources/image/icon_beta_38.png"
        },
        "default_popup": "popup.html",
        "default_title": "__MSG_extName__ v0.6 beta"
    }
}
